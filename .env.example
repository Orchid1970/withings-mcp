# Withings API Credentials (required)
WITHINGS_CLIENT_ID=your_client_id
WITHINGS_CLIENT_SECRET=your_client_secret

# Withings OAuth Tokens (required for /observations endpoint)
# Obtain these by completing the OAuth flow at /auth/withings
WITHINGS_ACCESS_TOKEN=your_access_token
WITHINGS_REFRESH_TOKEN=your_refresh_token

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./withings.db

# Encryption key for secure token storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_key_here

# Base URL of your deployed service
BASE_URL=https://your-app.railway.app