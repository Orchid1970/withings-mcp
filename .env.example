# Withings MCP Environment Variables
# ==================================
# Copy this file to .env for local development
# In production, set these in Railway's Variables panel

# ============================================
# WITHINGS OAUTH CONFIGURATION (Required)
# ============================================

# Your Withings OAuth application credentials
# Get these from https://developer.withings.com/dashboard
WITHINGS_CLIENT_ID=your_client_id_here
WITHINGS_CLIENT_SECRET=your_client_secret_here

# OAuth redirect URI (must match your Withings app configuration)
WITHINGS_REDIRECT_URI=https://withings-mcp-production.up.railway.app/auth/callback

# ============================================
# WITHINGS TOKENS (Auto-managed after auth)
# ============================================

# Access token for Withings API calls (expires ~14 days)
WITHINGS_ACCESS_TOKEN=

# Refresh token for obtaining new access tokens
# Note: Withings may rotate this on each refresh
WITHINGS_REFRESH_TOKEN=

# Token expiration timestamp (ISO 8601 format)
WITHINGS_TOKEN_EXPIRES_AT=

# Last successful token refresh timestamp
WITHINGS_TOKEN_LAST_REFRESHED=

# ============================================
# RAILWAY CONFIGURATION (Optional)
# ============================================

# Railway API token for automated variable updates
# Generate at https://railway.app/account/tokens
RAILWAY_API_TOKEN=

# Your Railway project ID (found in project settings)
RAILWAY_PROJECT_ID=

# Your Railway service ID (found in service settings)
RAILWAY_SERVICE_ID=

# Railway environment (default: production)
RAILWAY_ENVIRONMENT_ID=production

# ============================================
# ADMIN & SECURITY
# ============================================

# Admin API token for protected endpoints
# Generate a secure random string for production
ADMIN_API_TOKEN=

# Environment identifier
ENVIRONMENT=development

# ============================================
# LOGGING
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# DATABASE (if using persistent storage)
# ============================================

# PostgreSQL connection URL (provided by Railway)
# DATABASE_URL=postgresql://user:pass@host:port/db

# ============================================
# TIMEZONE
# ============================================

# Default timezone for timestamps
TZ=America/Los_Angeles
